<FindbugsPlugin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="findbugsplugin.xsd"
        pluginid="com.nextcloud.spotbugs.android">

        <Detector class="com.nextcloud.spotbugs.restricted.RestrictedApiCall" reports="NEXTCLOUD_RESTRICTED_API_CALL" speed="fast"/>
        <Detector class="com.nextcloud.spotbugs.impl.PrivateImplementationCall" reports="NEXTCLOUD_PRIVATE_IMPL_CALL" speed="fast"/>
        <BugPattern abbrev="NXRAC" type="NEXTCLOUD_RESTRICTED_API_CALL" category="CORRECTNESS"/>
        <BugPattern abbrev="NXPIC" type="NEXTCLOUD_PRIVATE_IMPL_CALL" category="CORRECTNESS"/>
</FindbugsPlugin>
